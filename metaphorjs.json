{
    "version": "0.1.6",
    "description": "MetaphorJs animation engine",

    "docs": {
        "": {
            "out": "docs",
            "renderer": "default",
            "src": [
                "src/**"
            ],
            "itemSort": {
                "by": "name",
                "direction": "asc"
            },
            "includeExternal": false,
            "data": {
                "title": "MetaphorJs.animate",
                "version": "v0.1.6"
            }
        }
    },

    "build": {
        "standalone": {
            "target": "dist/metaphorjs.animate.js",
            "files": [
                ["src/func/animate.js",  {"as": "*"}]
            ],
            "options": {
                "wrap": true,
                "global": true,
                "expose": [
                    "animate",
                    "stopAnimation"
                ]
            }  
        },

        "standalone-min": {
            "extend": "standalone",
            "target": "dist/metaphorjs.animate.min.js",
            "pipe": ["build", "compile", "write"]
        },

        "amd": {
            "target": "dist/metaphorjs.animate.amd.js",
            "files": [
                ["src/func/animate.js",  {"as": "*"}]
            ],
            "omit": [
                "metaphorjs-promise/src/lib/Promise.js"
            ],
            "options": {
                "amd": {
                    "name": "metaphorjs-animate",
                    "return": "animate",
                    "deps": {
                        "metaphorjs-promise": "Promise"
                    }
                }
            }
        },

        "amd-min": {
            "extend": "amd",
            "target": "dist/metaphorjs.animate.amd.min.js",
            "pipe": ["build", "compile", "write"]
        }
    }
}